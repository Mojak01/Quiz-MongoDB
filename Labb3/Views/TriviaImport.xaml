<Window x:Class="Labb3.Views.TriviaImport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3.Views"
        mc:Ignorable="d"
        Title="Import from Web" 
        Height="400" Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Margin" Value="0,10,0,2"/>
        </Style>
    </Window.Resources>

    <Border Padding="25">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#E0F7FA" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <StackPanel>
            <TextBlock Text="DOWNLOAD TRIVIA" 
                       FontSize="20" 
                       FontFamily="Segoe UI Black" 
                       Foreground="#0097A7" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,15"/>

            <Label Content="NUMBER OF QUESTIONS"/>
            <Border BorderBrush="#B2EBF2" BorderThickness="1" CornerRadius="4" Background="White">
                <TextBox x:Name="tbAmount" 
                         Text="10" 
                         Height="28" 
                         VerticalContentAlignment="Center" 
                         BorderThickness="0" 
                         Padding="5,0"/>
            </Border>

            <Label Content="CATEGORY"/>
            <Border BorderBrush="#B2EBF2" BorderThickness="1" CornerRadius="4" Background="White">
                <ComboBox x:Name="cbCat" 
                          Height="28" 
                          SelectedIndex="0" 
                          BorderThickness="0" 
                          VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Any Category" Tag=""/>
                    <ComboBoxItem Content="General Knowledge" Tag="9"/>
                    <ComboBoxItem Content="Books" Tag="10"/>
                    <ComboBoxItem Content="Film" Tag="11"/>
                    <ComboBoxItem Content="Music" Tag="12"/>
                    <ComboBoxItem Content="Video Games" Tag="15"/>
                    <ComboBoxItem Content="Science &amp; Nature" Tag="17"/>
                    <ComboBoxItem Content="Computers" Tag="18"/>
                    <ComboBoxItem Content="Geography" Tag="22"/>
                    <ComboBoxItem Content="History" Tag="23"/>
                </ComboBox>
            </Border>

            <Label Content="DIFFICULTY LEVEL"/>
            <Border BorderBrush="#B2EBF2" BorderThickness="1" CornerRadius="4" Background="White">
                <ComboBox x:Name="cbDiff" 
                          Height="28" 
                          SelectedIndex="0" 
                          BorderThickness="0" 
                          VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Mix / Any" Tag=""/>
                    <ComboBoxItem Content="Easy" Tag="easy"/>
                    <ComboBoxItem Content="Medium" Tag="medium"/>
                    <ComboBoxItem Content="Hard" Tag="hard"/>
                </ComboBox>
            </Border>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="Cancel" 
                        Click="Cancel_Click"
                        Background="#EF9A9A" 
                        Margin="0,0,5,0"/>

                <Button Grid.Column="1" 
                        Content="Download" 
                        Click="Import_Click"
                        Background="#00BCD4" 
                        Margin="5,0,0,0"/>
            </Grid>

        </StackPanel>
    </Border>
</Window>