<UserControl x:Class="Labb3.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             DataContext="{Binding ConfigVM}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F4F4F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
            </Border.Effect>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="CURRENT PACK" FontSize="10" Foreground="#AAA" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentPack.Name}" FontSize="18" FontWeight="Bold" Foreground="#333" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{Binding CurrentPack.Difficulty}" FontSize="12" Foreground="#888" FontStyle="Italic"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">

                    <Button Command="{Binding OptionsCmd}" 
                            Width="30" Height="30" Margin="0,0,5,0"
                            ToolTip="Pack Settings" Background="#EEE" BorderThickness="0">
                        <fa:IconBlock Icon="Cogs" Foreground="#555" Height="15"/>
                    </Button>

                    <Button Command="{Binding NewQCmd}" 
                            Width="30" Height="30" Margin="0,0,5,0"
                            ToolTip="Add New Question" Background="#E3F2FD" BorderThickness="0">
                        <fa:IconBlock Icon="Plus" Foreground="#2196F3" Height="15"/>
                    </Button>

                    <Button Command="{Binding RemoveQCmd}" 
                            IsEnabled="{Binding CanDelete}"
                            Width="30" Height="30" 
                            ToolTip="Delete Question" Background="#FFEBEE" BorderThickness="0">
                        <fa:IconBlock Icon="TrashAlt" Foreground="#F44336" Height="15"/>
                    </Button>

                </StackPanel>

                <ListBox Grid.Row="2" 
                         ItemsSource="{Binding CurrentPack.Questions}" 
                         SelectedItem="{Binding SelectedQ, UpdateSourceTrigger=PropertyChanged}"
                         BorderThickness="0"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Query}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="Question" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Column="1" 
                Margin="0,10,10,10" 
                Background="White" 
                CornerRadius="10"
                Visibility="{Binding ShowDetails, Converter={StaticResource BoolToVis}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">

                    <TextBlock Text="Edit Question" FontSize="22" FontFamily="Segoe UI Light" Margin="0,0,0,20"/>

                    <Label Content="QUESTION TEXT"/>
                    <TextBox Text="{Binding SelectedQ.Query, UpdateSourceTrigger=PropertyChanged}" 
                             Height="60" TextWrapping="Wrap" VerticalContentAlignment="Top" Padding="5"/>

                    <Separator Margin="0,10,0,10"/>

                    <Label Content="CORRECT ANSWER" Foreground="#2E7D32"/>
                    <TextBox Text="{Binding SelectedQ.CorrectAnswer, UpdateSourceTrigger=PropertyChanged}" 
                             BorderBrush="#A5D6A7"/>

                    <Label Content="WRONG ANSWER 1" Foreground="#C62828"/>
                    <TextBox Text="{Binding SelectedQ.IncorrectAnswers[0], UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="WRONG ANSWER 2" Foreground="#C62828"/>
                    <TextBox Text="{Binding SelectedQ.IncorrectAnswers[1], UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Content="WRONG ANSWER 3" Foreground="#C62828"/>
                    <TextBox Text="{Binding SelectedQ.IncorrectAnswers[2], UpdateSourceTrigger=PropertyChanged}"/>


                </StackPanel>
            </ScrollViewer>
        </Border>

        <TextBlock Grid.Column="1" 
                   Text="Select or Add a Question to edit." 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="#CCC" 
                   FontSize="16"
                   Visibility="{Binding ShowDetails, Converter={StaticResource BoolToVis}, ConverterParameter=Inverted}"/>
    </Grid>
</UserControl>