<UserControl x:Class="Labb3.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             DataContext="{Binding PlayerVM}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15" 
                                BorderBrush="#DDD" 
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                <GradientStop Color="#2C3E50" Offset="1"/>
                <GradientStop Color="#4CA1AF" Offset="0"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <TextBlock Text="{Binding TopInfo}" 
                       Foreground="White" 
                       FontSize="18" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"
                       Opacity="0.8"/>

            <Border HorizontalAlignment="Right" 
                    Background="White" 
                    CornerRadius="20" 
                    Padding="15,5">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="Clock" Foreground="#D32F2F" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding SecondsLeft}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#D32F2F"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="1" 
                Margin="40,10,40,20" 
                Background="#EEFFFFFF" 
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.4"/>
            </Border.Effect>

            <TextBlock Text="{Binding QText}" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="26" 
                       FontFamily="Segoe UI Light"
                       Margin="20"/>
        </Border>

        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Button Command="{Binding PickAnswerCmd}" CommandParameter="0">
                    <TextBlock Text="{Binding CurrentAnswers[0]}" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <fa:IconBlock Icon="CheckCircle" Foreground="#4CAF50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,15,0" Height="30"
                              Visibility="{Binding ShowGreen[0], Converter={StaticResource BoolToVis}}">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="5" Color="White"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>
                <fa:IconBlock Icon="TimesCircle" Foreground="#F44336" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,15,0" Height="30"
                              Visibility="{Binding ShowRed[0], Converter={StaticResource BoolToVis}}">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="5" Color="White"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">
                <Button Command="{Binding PickAnswerCmd}" CommandParameter="1">
                    <TextBlock Text="{Binding CurrentAnswers[1]}" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <fa:IconBlock Icon="CheckCircle" Foreground="#4CAF50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,15,0" Height="30"
                              Visibility="{Binding ShowGreen[1], Converter={StaticResource BoolToVis}}">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="5" Color="White"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>
                <fa:IconBlock Icon="TimesCircle" Foreground="#F44336" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,15,0" Height="30"
                              Visibility="{Binding ShowRed[1], Converter={StaticResource BoolToVis}}">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="5" Color="White"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0">
                <Button Command="{Binding PickAnswerCmd}" CommandParameter="2">
                    <TextBlock Text="{Binding CurrentAnswers[2]}" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <fa:IconBlock Icon="CheckCircle" Foreground="#4CAF50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,15,0" Height="30"
                              Visibility="{Binding ShowGreen[2], Converter={StaticResource BoolToVis}}">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="5" Color="White"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>
                <fa:IconBlock Icon="TimesCircle" Foreground="#F44336" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,15,0" Height="30"
                              Visibility="{Binding ShowRed[2], Converter={StaticResource BoolToVis}}">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="5" Color="White"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <Button Command="{Binding PickAnswerCmd}" CommandParameter="3">
                    <TextBlock Text="{Binding CurrentAnswers[3]}" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <fa:IconBlock Icon="CheckCircle" Foreground="#4CAF50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,15,0" Height="30"
                              Visibility="{Binding ShowGreen[3], Converter={StaticResource BoolToVis}}">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="5" Color="White"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>
                <fa:IconBlock Icon="TimesCircle" Foreground="#F44336" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,15,0" Height="30"
                              Visibility="{Binding ShowRed[3], Converter={StaticResource BoolToVis}}">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="5" Color="White"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>
            </Grid>

        </Grid>
    </Grid>
</UserControl>