<UserControl x:Class="Labb3.Views.ScoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding PlayerVM}">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25"
                                BorderBrush="#4CA1AF"
                                BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                <GradientStop Color="#2C3E50" Offset="1"/>
                <GradientStop Color="#4CA1AF" Offset="0"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Border Background="#FAFAFA" 
                CornerRadius="20" 
                Margin="50" 
                MaxWidth="600" 
                MaxHeight="400">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.4" Direction="270" Color="Black"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <fa:IconBlock Icon="Trophy" 
                              Foreground="#FFD700" 
                              FontSize="80" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20">
                    <fa:IconBlock.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#FFD700" Opacity="0.5"/>
                    </fa:IconBlock.Effect>
                </fa:IconBlock>

                <TextBlock Text="QUIZ FINISHED!" 
                           FontSize="32" 
                           FontWeight="Black" 
                           Foreground="#2C3E50" 
                           HorizontalAlignment="Center"
                           FontFamily="Segoe UI Black"/>

                <TextBlock Text="{Binding EndText}" 
                           FontSize="22" 
                           Foreground="#555" 
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,10,0,30"/>

                <Button Command="{Binding StartGameCmd}" 
                        HorizontalAlignment="Center"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock Icon="Redo" Margin="0,0,10,0" Foreground="#4CA1AF"/>
                        <TextBlock Text="PLAY AGAIN"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>