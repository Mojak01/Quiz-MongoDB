<Window x:Class="Labb3.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3.Dialogs"
        xmlns:c="clr-namespace:Labb3.Converters"
        mc:Ignorable="d"
        Title="Edit Options" 
        Height="340" Width="280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <c:DiffConverter x:Key="MyDiffConv"/>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,2"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#F0F8FF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#007ACC" CornerRadius="15,15,0,0" Padding="10">
                <TextBlock Text="PACK SETTINGS" 
                           Foreground="White" 
                           FontFamily="Segoe UI Black" 
                           HorizontalAlignment="Center"
                           FontSize="14"/>
            </Border>

            <StackPanel Grid.Row="1" Margin="20">

                <Label Content="RENAME PACK"/>
                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Background="White">
                    <TextBox Text="{Binding ActivePack.Name, UpdateSourceTrigger=PropertyChanged}"
                             Height="26"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Padding="5,0"/>
                </Border>

                <Label Content="CHANGE DIFFICULTY"/>
                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Background="White">
                    <ComboBox SelectedIndex="{Binding ActivePack.Difficulty, Converter={StaticResource MyDiffConv}}"
                              Height="28"
                              BorderThickness="0"
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Easy Mode"/>
                        <ComboBoxItem Content="Medium Mode"/>
                        <ComboBoxItem Content="Hard Mode"/>
                    </ComboBox>
                </Border>

                <Label Content="ADJUST TIMER"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,-25,0,0">
                    <TextBlock Text="{Binding ElementName=sliderTime, Path=Value}" FontWeight="Bold" Foreground="#007ACC"/>
                    <TextBlock Text="s" Foreground="#007ACC"/>
                </StackPanel>

                <Slider x:Name="sliderTime"
                        Margin="0,5,0,0"
                        Minimum="5" Maximum="120"
                        TickFrequency="5" IsSnapToTickEnabled="True"
                        Value="{Binding ActivePack.TimeLimitInSeconds, UpdateSourceTrigger=PropertyChanged}"/>

            </StackPanel>

            <Button Grid.Row="2" 
                    Content="Done" 
                    Click="CloseButton_Click"
                    Height="35"
                    Margin="20,0,20,20"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Border>
</Window>