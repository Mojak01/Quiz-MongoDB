<Window x:Class="Labb3.Dialogs.ImportQuestionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3.Dialogs"
        mc:Ignorable="d"
        Title="Download Questions" 
        Height="380" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>

    <Border Padding="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#E3F2FD" Offset="0"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <StackPanel>
            <TextBlock Text="Import Settings" 
                       FontSize="22" 
                       Foreground="#1976D2" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,15"
                       FontFamily="Segoe UI Light"/>

            <Label Content="HOW MANY QUESTIONS?"/>
            <Border BorderBrush="#BBB" BorderThickness="1" CornerRadius="4" Background="White">
                <TextBox x:Name="tbCount" 
                         Text="10" 
                         Height="28" 
                         VerticalContentAlignment="Center" 
                         BorderThickness="0" 
                         Padding="5,0"/>
            </Border>

            <Label Content="SELECT CATEGORY"/>
            <Border BorderBrush="#BBB" BorderThickness="1" CornerRadius="4" Background="White">
                <ComboBox x:Name="cbCategories" Height="28" BorderThickness="0" SelectedIndex="0" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Any Category" Tag=""/>
                    <ComboBoxItem Content="General Knowledge" Tag="9"/>
                    <ComboBoxItem Content="Books" Tag="10"/>
                    <ComboBoxItem Content="Movies" Tag="11"/>
                    <ComboBoxItem Content="Music" Tag="12"/>
                    <ComboBoxItem Content="Video Games" Tag="15"/>
                    <ComboBoxItem Content="Science &amp; Nature" Tag="17"/>
                    <ComboBoxItem Content="Sports" Tag="21"/>
                    <ComboBoxItem Content="Geography" Tag="22"/>
                    <ComboBoxItem Content="History" Tag="23"/>
                    <ComboBoxItem Content="Politics" Tag="24"/>
                    <ComboBoxItem Content="Art" Tag="25"/>
                </ComboBox>
            </Border>

            <Label Content="DIFFICULTY"/>
            <Border BorderBrush="#BBB" BorderThickness="1" CornerRadius="4" Background="White">
                <ComboBox x:Name="cbDiff" Height="28" BorderThickness="0" SelectedIndex="0" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Any Difficulty" Tag=""/>
                    <ComboBoxItem Content="Easy" Tag="easy"/>
                    <ComboBoxItem Content="Medium" Tag="medium"/>
                    <ComboBoxItem Content="Hard" Tag="hard"/>
                </ComboBox>
            </Border>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="Cancel" 
                        Click="BtnCancel_Click"
                        Background="#FFCDD2" 
                        Foreground="#C62828"
                        Margin="0,0,5,0"/>

                <Button Grid.Column="1" 
                        Name="btnGo"
                        Content="Start Import" 
                        Click="BtnGo_Click"
                        Background="#2196F3" 
                        Foreground="White"
                        Margin="5,0,0,0"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>