<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:Labb3" 
        xmlns:views="clr-namespace:Labb3.Views"
        mc:Ignorable="d"
        Background="#F0F2F5"
        Height="550" Width="900" 
        MinHeight="500" MinWidth="750" 
        Title="My Quiz App"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Insert" Command="{Binding ConfigVM.NewQCmd}"/>
        <KeyBinding Key="Delete" Command="{Binding ConfigVM.RemoveQCmd}"/>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding ConfigVM.OptionsCmd}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ConfigVM.GoToConfigCmd}"/>

        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding PlayerVM.StartGameCmd}"/>

        <KeyBinding Key="Enter" Modifiers="Alt" Command="{Binding FullScreenCmd}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveCmd}"/>
        <KeyBinding Key="I" Modifiers="Ctrl" Command="{Binding ImportCmd}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0"/>

        <Border Grid.Row="1" Margin="10" Background="White" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
            </Border.Effect>

            <Grid ClipToBounds="True">
                <views:ConfigurationView Visibility="{Binding DataContext.ConfigVM.IsConfigView, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>

                <views:PlayerView Visibility="{Binding DataContext.PlayerVM.IsPlaying, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>

                <views:ScoreView Visibility="{Binding DataContext.PlayerVM.IsFinished, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>

            </Grid>
        </Border>
    </Grid>
</Window>